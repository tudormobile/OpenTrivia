<UserControl x:Class="WpfSampleApp.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSampleApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </Grid.Resources>

        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <ItemsControl Grid.Row="0" ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5,0" BorderThickness="0,0,1,0" BorderBrush="Gray">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xF0D6;" FontFamily="Segoe Fluent Icons" 
                                               Width="18" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding Name}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- Show loading message -->
                <TextBlock Text="Loading game..."
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="20" 
                   FontStyle="Italic"/>

            </StackPanel>
            <TextBlock Grid.Row="1" Text="{Binding Categories.Count, StringFormat='Playing with {0} categories'}" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <!-- Countdown Estimate -->
            <TextBlock Grid.Row="2" Text="{Binding CountDown}" VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="48" FontWeight="Bold" Foreground="DarkRed" 
                       Visibility="{Binding IsCountDownVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Show questions in the middle -->
            <ListView Grid.Row="2" ItemsSource="{Binding Questions}" SelectionMode="Single" Padding="10,0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto, *">
                            <TextBlock Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="2,2">
                                <Run Text="{Binding QuestionNumber, Mode=OneWay, StringFormat='Question {0}. '}" TextDecorations="Underline"/>
                                <Run Text="{Binding Question, Mode=OneWay}" FontWeight="SemiBold"/>
                                <Run Text="{Binding Difficulty, Mode=OneWay, StringFormat=' ({0})'}" FontStyle="Italic"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1" Text="{Binding AllAnswers}" />
                            <TextBlock Grid.Row="1" Grid.Column="1"  FontWeight="Bold" FontSize="18" x:Name="AnswerTextBlock"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding Answer}" 
                                       Visibility="{Binding IsAnswered, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <Button Grid.Row="1" Grid.Column="1" 
                                    Content="Answer" HorizontalContentAlignment="Right"
                                    HorizontalAlignment="Right" Margin="5"
                                    Command="{Binding DataContext.AnswerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Show score at the bottom -->
            <TextBlock Grid.Row="3" Text="{Binding Score, StringFormat='Completed: {0}'}" 
                       FontSize="16" FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </Grid>
    </Grid>
</UserControl>
