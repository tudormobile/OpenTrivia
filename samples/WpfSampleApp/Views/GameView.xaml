<UserControl x:Class="WpfSampleApp.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSampleApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </Grid.Resources>

        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <ItemsControl Grid.Row="0" ItemsSource="{Binding Game.Categories}" 
                              ItemTemplate="{StaticResource OpenTrivia.UI.CategoryTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <!-- Show loading message -->
                <TextBlock Text="Loading game..."
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="20" 
                   FontStyle="Italic"/>

            </StackPanel>
            <TextBlock Grid.Row="1" Text="{Binding Game.Categories.Count, StringFormat='Playing with {0} categories'}" 
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <!-- Countdown Estimate -->
            <TextBlock Grid.Row="2" Text="{Binding CountDown}" VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="48" FontWeight="Bold" Foreground="DarkRed" 
                       Visibility="{Binding IsCountDownVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <!-- Show questions in the middle -->
            <ListView Grid.Row="2" ItemsSource="{Binding Game.Questions}" SelectionMode="Single" Padding="10,0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectedItem="{Binding SelectedQuestion, Mode=TwoWay}"
                     HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *">
                            <ContentControl Grid.ColumnSpan="2" Content="{Binding}" Margin="2,2"
                                            ContentTemplate="{StaticResource OpenTrivia.UI.QuestionWithAnswersTemplate}" />
                            <TextBlock Grid.Column="1"  FontWeight="Bold" FontSize="18" x:Name="AnswerTextBlock"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding SelectedAnswer}" 
                                       Visibility="{Binding IsAnswered, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <Button Grid.Column="1" 
                                    Content="Answer" HorizontalContentAlignment="Right"
                                    HorizontalAlignment="Right" Margin="5"
                                    Command="{Binding DataContext.AnswerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Show score at the bottom -->
            <TextBlock Grid.Row="3" Text="{Binding Game.Score, StringFormat='Completed: {0}'}" 
                       FontSize="16" FontWeight="SemiBold" 
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </Grid>
    </Grid>
</UserControl>
