<UserControl x:Class="WpfSampleApp.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfSampleApp.Views"
             xmlns:ui="clr-namespace:Tudormobile.OpenTrivia.UI;assembly=Tudormobile.OpenTrivia.UI"
             mc:Ignorable="d" BorderThickness="0" BorderBrush="DarkGreen" Padding="2"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid RowDefinitions="*,Auto">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </Grid.Resources>
        <TextBlock Grid.Row="1" Margin="10,0,0,0" FontWeight="SemiBold"
                   Text="{Binding SelectedItems.Count, ElementName=List, StringFormat='Categories selected: {0}'}"/>
        <TextBlock Text="Gathering categories ..." 
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontSize="16" FontStyle="Italic"/>
        <ListBox x:Name="List" ItemsSource="{Binding Categories}" 
                 SelectionMode="Multiple" BorderBrush="Transparent" Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="OuterBorder"
                                BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Padding="{Binding Padding, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Background="LightYellow" SnapsToDevicePixels="True" Margin="2" VerticalAlignment="Center"
                                CornerRadius="10">
                        <Border BorderThickness="1" SnapsToDevicePixels="True"
                                BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Margin="{Binding Padding, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CornerRadius="10">
                            <ContentControl x:Name="Content" Margin="5" Padding="0" Content="{Binding}"
                                            ContentTemplate="{StaticResource OpenTrivia.UI.CategoryTemplate}" />
                        </Border>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="LightGreen"/>
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="Green"/>
                            <Setter TargetName="OuterBorder" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="Content" Property="TextElement.FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderThickness)"
                                                        To="2" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="OuterBorder" Storyboard.TargetProperty="(Border.BorderThickness)"
                                                        To="{x:Null}" Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
